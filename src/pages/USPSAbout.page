          <apex:image id="logo" value="{!URLFOR($Resource.wiregrass_resources, 'wiregrass.png')}" height="60" width="200"/>
          <p>&nbsp;&copy; Wiregrass Code Technology 2014-2023.&nbsp;&nbsp;Powered By: <strong>Salesforce.com</strong></p><p />
          
          <!-- Navigation buttons -->
          <apex:panelGroup >
            <apex:commandButton action="{!back}" value="Back" id="backButton" title="Back to main page"/>
          </apex:panelGroup>
        </apex:pageBlock><p />
      </apex:form>
    </div>
  </div>

  <!-- Footer -->
  <div id="footer_container">
    <div id="footer">
      &copy; Wiregrass Code Technology 2014-2023. All rights reserved.
    </div>
  </div>
